<!-- res/drawable/rounded_ends_shape.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="#FFF4E2C6"/> <!-- Warna bentuk -->

    <corners
        android:topLeftRadius="0dp"
        android:topRightRadius="0dp"
        android:bottomLeftRadius="10dp"
        android:bottomRightRadius="10dp"/> <!-- Radius sudut kiri dan kanan -->

    <size
        android:width="200dp"
    android:height="40dp"/>

    <stroke
        android:width="2dp"
        android:color="#F8DFB7"/> <!-- Warna dan ketebalan border -->
</shape>
